{
  "env": {
    "es2020": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "ignorePatterns": [
    "/lib/**/*.d.ts",
    "/lib/**/*.js",
    "/test/**/*.d.ts",
    "/test/**/*.js"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
    "no-console": "error",
    "no-trailing-spaces": "error",
    "camelcase": "error",
    "semi": "error",
    "indent": ["error", 2],
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-namespace": "error"
  },
  "root": true
}
